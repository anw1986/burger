<div class="container">
    <div class="jumbotron">

        <h1>Burgers To Devour</h1>

    </div>

    <div class="row">
        <div class="col-4">
            <h6>Burgers on the Menu</h6>
        </div>
        <div class="col-1"></div>
        <div class="col-2"></div>
        <div class="col-1"></div>
        <div class="col-4">
            <h6>Burgers to devour</h6>
        </div>
    </div>

    <div class="row">
        <div class="col-4">
            <ul>
                {{#each burgers}}
                <li>
                    <p>
                        {{this.id}}. {{this.burger_name}}

                        <button data-planid="{{this.id}}" class="devourBurger">Devour</button>
                    </p>
                </li>
                {{/each}}
            </ul>
        </div>
        <div class="col-1"></div>
        <div class="col-2"></div>
        <div class="col-1"></div>
        <div class="col-4">
            <h6>Nothing here</h6>
        </div>
    </div>

    <h2>Add a Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="burgerName" name="name">
        </div>


        <button type="submit">Add Burger</button>
    </form>

</div>